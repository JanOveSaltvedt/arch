! terminal colors ---------------------------------------------------------
!Theme SMYCK
! Background + foreground
*background: #000000
*foreground: #BDBDBD
! Black + DarkGrey
*color0:  #000000
*color8:  #9D9D9D
! DarkRed + Red
*color1:  #C75646
*color9:  #E09690
! DarkGreen + Green
*color2:  #8EB33B
*color10: #CDEE69
! DarkYellow + Yellow
*color3:  #D0B03C
*color11: #FFE377
! DarkBlue + Blue
*color4:  #72B3CC
*color12: #9CD9F0
! DarkMangenta + Mangenta
*color5:  #C8A0D1
*color13: #FBB1F9
! DarkCyan + Cyan
*color6:  #218693
*color14: #77DFD8
! LightGrey + White
*color7:  #D0D0D0
*color15: #F7F7F7



! Xcursor -----------------------------------------------------------------
 Xcursor*theme: Vanilla-DMZ-AA
  Xcursor.size:  22

! Xft settings ------------------------------------------------------------
Xft.dpi:        110
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull



! rxvt-unicode ---------------------------------------------------------------

! font preference
!urxvt*font:      xft:terminus:pixelsize=10
!urxvt*font:      xft:terminus:size=13:antialias=true:hinting=true
urxvt*font:      -*-terminus-*-*-normal-*-12-*-*-*-*-*-*-*
!initial size
!internal whitespace
urxvt*internalBorder:     5
!fade text n% upon unfocus
urxvt*fading:             20
!save n lines of scrollback buffer
urxvt*saveLines:          32767
!flash screen for attention
urxvt*visualBell:         false
!jump to bottom (prompt) on keypress
urxvt*scrollTtyKeypress:  true
!jump to bottom (prompt) when tty gets new lines
urxvt*scrollWithBuffer:   false
!jump to bottom (prompt) on tty output
urxvt*scrollTtyOutput:    false
!toggle scrollbar
urxvt*scrollBar:          false
!scrollbar styles: rxvt, plain, next or xterm
urxvt*scrollstyle:        plain
!scrollbar alignment
urxvt*scrollBar_right:    true
urxvt*scrollColor:        #777777
urxvt*cursorColor:        #ffcc00
!is this a login shell?
urxvt*loginShell:         true
!set the TERM environment variable
!urxvt*termName:           rxvt-unicode-256color
urxvt*termName:           xterm-256color
!delimiters for double-click mouse selection
urxvt*cutchars:           "()*,<>[]{}|'
!screen dump settings
urxvt*print-pipe:         cat > $(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))
!secondary screen scroll (default enabled)
urxvt*secondaryScroll:    true
!de-iconify (map) on receipt of a bell character
urxvt*mapAlert:           true
!inhibit writing record into the system log file utmp
urxvt*utmpInhibit:        true
!! BEGIN urlLauncher settings !!
urxvt*perl-lib:           /usr/lib/urxvt/perl/
urxvt*perl-ext-common:    default,matcher
#urxvt*urlLauncher:        /usr/bin/firefox
urxvt*url-launcher:        /usr/bin/chromium
URxvt.colorUL:            #4682B4
urxvt*matcher.button:     1
!! END urlLauncher settings !!
urxvt.keysym.C-0: command:\033]50;-*-terminus-*-*-normal-*-12-*-*-*-*-*-*-*\007
urxvt.keysym.C-minus: command:\033]50;-*-terminus-*-*-normal-*-14-*-*-*-*-*-*-*\007
urxvt.keysym.C-plus: command:\033]50;-*-terminus-*-*-normal-*-16-*-*-*-*-*-*-*\007


!True transparency:
!transparent=0000 opaque=ffff
!urxvt*depth: 32
!urxvt*background: rgba:1111/1111/1111/dddd

!Fake transparency:
urxvt*inheritPixmap: true
urxvt*tintColor: white
urxvt*shading: 12

!Disable iso thingy
urxvt*iso14755_52: false

